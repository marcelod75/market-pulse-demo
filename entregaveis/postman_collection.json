{
    "info":  {
                 "name":  "Market Pulse – Demo",
                 "schema":  "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
             },
    "variable":  [
                     {
                         "key":  "baseUrl",
                         "value":  "http://127.0.0.1:8020"
                     }
                 ],
    "item":  [
                 {
                     "name":  "List articles",
                     "request":  {
                                     "method":  "GET",
                                     "url":  {
                                                 "query":  [
                                                               {
                                                                   "key":  "page",
                                                                   "value":  "1"
                                                               },
                                                               {
                                                                   "key":  "per_page",
                                                                   "value":  "10"
                                                               }
                                                           ],
                                                 "host":  [
                                                              "{{baseUrl}}"
                                                          ],
                                                 "raw":  "{{baseUrl}}/api/articles?page=1\u0026per_page=10",
                                                 "path":  [
                                                              "api",
                                                              "articles"
                                                          ]
                                             }
                                 }
                 },
                 {
                     "name":  "Search articles",
                     "request":  {
                                     "method":  "GET",
                                     "url":  {
                                                 "query":  [
                                                               {
                                                                   "key":  "q",
                                                                   "value":  "juros"
                                                               }
                                                           ],
                                                 "host":  [
                                                              "{{baseUrl}}"
                                                          ],
                                                 "raw":  "{{baseUrl}}/api/articles/search?q=juros",
                                                 "path":  [
                                                              "api",
                                                              "articles",
                                                              "search"
                                                          ]
                                             }
                                 }
                 },
                 {
                     "name":  "Get article by id",
                     "request":  {
                                     "method":  "GET",
                                     "url":  {
                                                 "host":  [
                                                              "{{baseUrl}}"
                                                          ],
                                                 "raw":  "{{baseUrl}}/api/articles/a1",
                                                 "path":  [
                                                              "api",
                                                              "articles",
                                                              "a1"
                                                          ]
                                             }
                                 }
                 }
             ]
}
